<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AskFairy">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff"
        android:baselineAligned="true"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Date"
            android:id="@+id/button2"
            android:clickable="true"
            android:layout_weight="1" />

        <Button
            android:layout_width="106dp"
            android:layout_height="81dp"
            android:text="Prom-Posal"
            android:id="@+id/button"
            android:textColor="#ff1311ff"
            android:typeface="serif"
            android:width="@dimen/abc_action_bar_default_height_material"
            android:textAppearance="@color/button_material_light"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/abc_background_cache_hint_selector_material_light"
            android:clickable="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My check box"
            android:id="@+id/checkBox"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/linearLayout"
            android:layout_toStartOf="@+id/linearLayout"
            android:checked="false"
            android:clickable="true"
            android:textColor="#ff1dff15" />

    </LinearLayout>

</RelativeLayout>
